extends layout
include mixins/_reserv_Form

block content
  a(href="/admin")
    button(type="button" class="button_small") Back to admin
   
  hr
 

  h3=title
    form(action="" method="POST")
      
        
      input(type="text" name="name" class="input" id="first_name" placeholder="Nom - Prenom: "  value=courseData.name    required)

      
        
      input(type="tel" name="num_tel" class="input" id="num_tel" placeholder= "Numero de telephone: "    required)

      
        
      input(type="number" name="nombre_personne" class="input" id="nombre_personne" min="1" max="3" placeholder="nombre de personne"  required)

      
        
      input(type="text" name="addresse_depart" class="input" id="addresse_depart" placeholder="addresse de depart" required)

      
        
      input(type="text" name="addresse_fin" class="input" id="addresse_fin" placeholder="addresse d'arrivée" required)

      
        
      input(type="date" name="date_depart" class="input" id="date_depart" placeholder="date de départ" required)

      input(type="time" name="heure_depart" class="input" id="heure_depart" placeholder="heure de départ" required)
      button(type="submit" ) CONFIRMER!
    hr
  

    



