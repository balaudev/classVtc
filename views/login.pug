extends layout

block content
  div(class="wrapper")
      div(class="page-header clear-filter" filter-color="orange")
        div(class="page-header-image" data-parallax="true" style="background-image:url('/assets/img/vtc6.jpg');")
      div(class="espaceuser")
        h3(class="title")= title

      

      div(class="section section-contact-us text-center")
        div(class="container")
          h3(class="title") Se connecter
          p(class="description") Avec les r√©seaux sociaux ou avec mon compte 
          div(class="card-header text-center")
            div(class="social-line")
              a(href="/auth/twitter" class="btn btn-neutral btn-twitter btn-icon btn-round")
                i(class="fab fa-twitter fa-2x")
              a(href="/auth/google" class="btn btn-neutral btn-google btn-icon btn-default")
                i(class="fab fa-google-plus fa-2x")
          
          div(class="row")
            div(class="col-lg-12 text-center col-md-8 ml-auto mr-auto")
      
              form(action="/login" method="POST")
                  
                  
                  div(class="input-group input-lg")
                    div(div class="input-group-prepend")
                      span(class="input-group-text")
                        i(i class="now-ui-icons ui-1_email-85")
                    input(type="text" name="email" class="form-control" id="email" placeholder="email" required)

                  
                  
                  div(class="input-group input-lg")
                    div(div class="input-group-prepend")
                      span(class="input-group-text")
                        i(i class="now-ui-icons objects_key-25")
                    input(type="password" name="password" class="form-control" id="password" placeholder="mot de passe" required)

                  
                  button(type="submit" class="btn btn-info btn-round btn-block  btn-lg" ) Se connecter